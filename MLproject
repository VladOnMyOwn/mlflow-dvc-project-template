name: Cancer_Modeling

python_env: python_env.yaml

entry_points:
    data-preprocessing:
        parameters:
            test-size: {type: float, default: 0.33}  # Short syntax
        command: "python data_preprocessing.py --test-size {test-size}"
    hyperparameters-tuning:
        parameters:
            data-run-id: {type: str, default: ""}
            n-trials:  # Long syntax
                type: int
                default: 10
        command: "python hyperparameters_tuning.py --data-run-id {data-run-id} --n-trials {n-trials}"
    model-training:
        parameters:
            data-run-id: {type: str, default: ""}
            tuning-run-id: {type: str, default: ""}
        command: "python model_training.py --data-run-id {data-run-id} --tuning-run-id {tuning-run-id}"
    model-evaluation:
        parameters:
            eval-dataset: str  # Specifying just the data type
        command: "python model_evaluation.py --eval-dataset {eval-dataset}"
